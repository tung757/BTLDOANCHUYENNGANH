@model WEBLAPTOP.Models.KHACHHANG

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Thêm liên kết đến Bootstrap Icons (nếu bạn chưa có trong _Layout) *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@* CSS tùy chỉnh để có giao diện giống hệt ảnh
    Tốt nhất, bạn nên chuyển đoạn <style> này vào file CSS chung của dự án.
*@
<style>
    .profile-container {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        background-color: #fff;
        padding: 24px;
        border-radius: 5px;
    }

    /* Tiêu đề chính "Thông tin chi tiết khách hàng" */
    .profile-header h2 {
        font-size: 22px;
        font-weight: 700;
        color: #111;
        margin: 0; /* Bỏ margin mặc định của h2 */
        padding-bottom: 12px;
        border-bottom: 3px solid #111;
    }

    .profile-body {
        margin-top: 20px;
    }

    /* Tiêu đề phụ "Thông tin cá nhân", "Thông tin liên hệ..." */
    .profile-section h4 {
        font-size: 18px;
        font-weight: 700;
        color: #111;
        margin-bottom: 25px;
    }

    /* Nhóm "Label: Value" (ví dụ: "Tên khách hàng: ...") */
    .info-group {
        margin-bottom: 20px;
        font-size: 15px;
        display: flex; /* Dùng flexbox để căn chỉnh */
        flex-wrap: wrap;
    }

        .info-group label {
            font-weight: 700;
            color: #333;
            width: 140px; /* Đặt độ rộng cố định cho nhãn */
            flex-shrink: 0;
        }

        .info-group span {
            color: #111;
            flex-grow: 1;
        }

            /* CSS cho Phân quyền highlight màu xanh */
            .info-group span.role-badge {
                background-color: #007bff;
                color: #fff;
                padding: 3px 8px;
                border-radius: 4px;
                font-weight: 500;
                display: inline-block; /* Để background vừa với chữ */
            }


    /* Khu vực chứa các nút bấm */
    .profile-buttons {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee; /* Đường kẻ mờ */
        display: flex;
        gap: 10px; /* Khoảng cách giữa các nút */
    }

        .profile-buttons .btn {
            display: inline-flex;
            align-items: center;
            gap: 6px; /* Khoảng cách giữa icon và chữ */
            font-weight: 600;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
        }

        /* Nút "Chỉnh sửa" màu vàng */
        .profile-buttons .btn-edit {
            background-color: #28a745;
            color: #fff;
        }

            .profile-buttons .btn-edit:hover {
                background-color: #e6b944;
                color: #111;
            }

        /* Nút "Quay lại" màu đen/xanh đậm */
        .profile-buttons .btn-back {
            background-color: #232f3e;
            color: #fff;
        }

            .profile-buttons .btn-back:hover {
                background-color: #34475e;
                color: #fff;
            }
</style>

<div class="profile-container">

    <div class="profile-header">
        <h2>Thông tin chi tiết khách hàng</h2>
    </div>

    <div class="profile-body">
        <div class="row">

            <div class="col-md-6">
                <div class="profile-section">
                    <h4>Thông tin cá nhân</h4>

                    <div class="info-group">
                        <label>Tên khách hàng:</label>
                        <span>@Html.DisplayFor(model => model.TenKH)</span>
                    </div>
                    <div class="info-group">
                        <label>Giới tính:</label>
                        <span>@Html.DisplayFor(model => model.GioTinh)</span>
                    </div>
                    <div class="info-group">
                        <label>Ngày sinh:</label>
                        <span>@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</span>
                    </div>
                    <div class="info-group">
                        <label>Địa chỉ:</label>
                        <span>@Html.DisplayFor(model => model.DiaChi)</span>
                    </div>

                </div>
            </div>

            <div class="col-md-6">
                <div class="profile-section">
                    <h4>Thông tin liên hệ & Tài khoản</h4>

                    <div class="info-group">
                        <label>Số điện thoại:</label>
                        <span>@Html.DisplayFor(model => model.SDT)</span>
                    </div>
                    <div class="info-group">
                        <label>Email:</label>
                        <span>@Html.DisplayFor(model => model.Email)</span>
                    </div>
                    <div class="info-group">
                        <label>Tài khoản (TK):</label>
                        <span>@Html.DisplayFor(model => model.TK)</span>
                    </div>
                    <div class="info-group">
                        <label>Mật khẩu (MK):</label>
                        <span>********</span>
                    </div>
                   

                </div>
            </div>
        </div>
    </div> <div class="profile-buttons">
        <a href="@Url.Action("Edit", "Profile")" class="btn btn-edit">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>

        @* Sửa link "Index", "Home" nếu bạn muốn nó quay lại trang khác *@
        <a href="@Url.Action("Index", "Home")" class="btn btn-back">
            <i class="bi bi-arrow-left"></i> Quay lại trang chủ
        </a>
    </div>

</div>