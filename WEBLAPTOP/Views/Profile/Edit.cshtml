@model WEBLAPTOP.Models.KHACHHANG

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Thêm liên kết đến Bootstrap Icons (nếu bạn chưa có) *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .profile-container {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        background-color: #fff;
        padding: 24px;
        border-radius: 5px;
    }

    /* Tiêu đề chính */
    .profile-header h2 {
        font-size: 22px;
        font-weight: 700;
        color: #111;
        margin: 0;
        padding-bottom: 12px;
        border-bottom: 3px solid #111;
    }

    /* Phần thân chứa form */
    .profile-body {
        margin-top: 20px;
    }

    /* Khu vực chứa các nút bấm */
    .profile-buttons {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee; /* Đường kẻ mờ */
        display: flex;
        justify-content: flex-start; /* Nút bấm căn trái */
        gap: 10px; /* Khoảng cách giữa các nút */
    }

        .profile-buttons .btn {
            display: inline-flex;
            align-items: center;
            gap: 6px; /* Khoảng cách giữa icon và chữ */
            font-weight: 600;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
        }

        /* Nút "Quay lại" màu đen/xanh đậm */
        .profile-buttons .btn-back {
            background-color: #232f3e;
            color: #fff;
        }

            .profile-buttons .btn-back:hover {
                background-color: #34475e;
                color: #fff;
            }

        /* Nút "Lưu" màu xanh lá */
        .profile-buttons .btn-save {
            background-color: #28a745;
            color: #fff;
        }

            .profile-buttons .btn-save:hover {
                background-color: #218838;
                color: #fff;
            }

    /* Căn chỉnh label và input trong form */
    .profile-body .form-label {
        font-weight: 600;
    }
</style>

<div class="profile-container">

    <div class="profile-header">
        <h2>Chỉnh sửa thông tin tài khoản</h2>
    </div>

    @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { id = "editProfileForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Các trường ẩn vẫn giữ nguyên *@
        @Html.HiddenFor(model => model.ID_KH)
        @Html.HiddenFor(model => model.TK)
        @Html.HiddenFor(model => model.PhanQuyen)

        <div class="profile-body">
            <div class="row">

                <div class="col-md-6">
                    @* 1. Tài khoản (Chỉ đọc) *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TK, "Tài khoản", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.TK, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    @* 2. Họ tên *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TenKH, "Họ tên", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                    </div>

                    @* 3. Email *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    @* 4. Địa chỉ *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    @* 5. Số điện thoại *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", type = "tel" })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>

                    @* 6. Giới tính *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.GioTinh, "Giới tính", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.GioTinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GioTinh, "", new { @class = "text-danger" })
                    </div>

                    @* 7. Ngày sinh *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.NgaySinh, "Ngày sinh", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>

                    @* 8. Mật khẩu *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MK, "Mật khẩu mới", htmlAttributes: new { @class = "form-label" })
                        <small class="form-text text-muted d-block mb-2">Bỏ trống nếu không muốn thay đổi mật khẩu.</small>
                        @Html.PasswordFor(model => model.MK, new { @class = "form-control", @Value = "" })
                        @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div> <div class="profile-buttons">
            <a href="@Url.Action("Khachhang", "Profile")" class="btn btn-back">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="button" id="saveButton" class="btn btn-save">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
        </div>
    }

</div>
@* Thêm thư viện SweetAlert2 và script xử lý *@
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Đợi tài liệu tải xong
        document.addEventListener('DOMContentLoaded', function () {

            // 1. Tìm nút "Lưu thay đổi"
            document.getElementById('saveButton').addEventListener('click', function (e) {

                // 2. Hiển thị hộp thoại xác nhận
                Swal.fire({
                    title: 'Xác nhận lưu?',
                    text: "Bạn có chắc chắn muốn lưu những thay đổi này không?",
                    icon: 'question', // Bạn có thể đổi thành 'warning'
                    showCancelButton: true,
                    confirmButtonColor: '#28a745', // Màu nút Lưu (xanh lá)
                    cancelButtonColor: '#d33', // Màu nút Hủy (đỏ)
                    confirmButtonText: 'Lưu',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    // 3. Nếu người dùng nhấn "Lưu"
                    if (result.isConfirmed) {
                        // 4. Tìm form bằng ID và gửi (submit) form đó đi
                        document.getElementById('editProfileForm').submit();
                    }
                });
            });
        });
    </script>
}