    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center" style="padding: 60px 0;">
    <div class="alert alert-success" style="font-size: 1.5em; padding: 30px;">
        <strong>@ViewBag.Message</strong>
    </div>
    <p class="mt-4">Chúng tôi sẽ xử lý đơn hàng của bạn trong thời gian sớm nhất.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Quay về trang chủ</a>
    <a href="@Url.Action("Index", "DonHang")" class="btn btn-outline-secondary mt-3">Xem lịch sử đơn hàng</a>
</div>