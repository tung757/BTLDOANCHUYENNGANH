@model WEBLAPTOP.Models.DONHANG

@{
    ViewBag.Title = "Chi tiết đơn hàng #" + Model.ID_DH;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Chi tiết đơn hàng #@Model.ID_DH</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            &laquo; Quay lại danh sách
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Thông tin đơn hàng</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0">
                <tbody>
                    <tr>
                        <th style="width: 200px;" class="bg-light">Người nhận:</th>
                        <td>@Model.Ten</td>
                        <th style="width: 200px;" class="bg-light">Số điện thoại:</th>
                        <td>@Model.SDT</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Địa chỉ giao hàng:</th>
                        <td colspan="3">@Model.DiaChiGiaoHang</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Ngày đặt hàng:</th>
                        <td>@(Model.NgayLap.HasValue ? Model.NgayLap.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                        <th class="bg-light">Trạng thái:</th>
                        <td><span class="fw-bold text-primary">@Model.TrangThai</span></td>
                    </tr>
                    <tr>
                        <th class="bg-light">Phương thức thanh toán:</th>
                        <td colspan="3">@Model.PhuongthucTT</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Danh sách sản phẩm</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover mb-0">
                <thead class="thead-light text-center">
                    <tr>
                        <th>STT</th>
                        <th>Ảnh sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal tongTien = 0;
                        int stt = 1;
                    }

                    @foreach (var sp in Model.DONHANG_SANPHAM)
                    {
                        var soLuong = sp.SoLuong ?? 0;
                        var donGia = sp.DonGia ?? 0;
                        decimal tt = soLuong * donGia;
                        tongTien += tt;
                        string[] images = sp.SANPHAM.Images_url.Split(';');
                        <tr>
                            <td class="text-center align-middle">@stt</td>
                            <td class="text-center align-middle">
                                <img src="~/Images/Product_images/@images[0]"
                                     style="width: 60px; height: 60px; object-fit: cover; border: 1px solid #ddd; padding: 2px;" />
                            </td>
                            <td class="align-middle fw-bold text-primary">
                                @sp.SANPHAM.TenSP
                            </td>
                            <td class="text-center align-middle">@sp.SoLuong</td>
                            <td class="text-end align-middle">@String.Format("{0:N0} đ", sp.DonGia)</td>
                            <td class="text-end align-middle fw-bold">@String.Format("{0:N0} đ", tt)</td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3 justify-content-end">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-borderless mb-0">
                        @{
                            decimal? giamGia = 0;
                            decimal canThanhToan = tongTien;

                            if (Model.KHUYENMAI != null)
                            {
                                giamGia = tongTien * (Model.KHUYENMAI.GiamGia / 100m);
                                canThanhToan = tongTien - (giamGia ?? 0);
                            }
                        }
                        <tr>
                            <td class="text-end"><strong>Tổng tiền hàng:</strong></td>
                            <td class="text-end">@String.Format("{0:N0} đ", tongTien)</td>
                        </tr>

                        @if (Model.KHUYENMAI != null)
                        {
                            <tr class="text-success">
                                <td class="text-end">
                                    <strong>Khuyến mãi (@Model.KHUYENMAI.Mota):</strong>
                                </td>
                                <td class="text-end">-@String.Format("{0:N0} đ", giamGia)</td>
                            </tr>
                        }

                        <tr>
                            <td class="text-end"><strong>Phí vận chuyển:</strong></td>
                            <td class="text-end">Miễn phí</td>
                        </tr>
                        <tr class="border-top">
                            <td class="text-end fs-5 align-middle"><strong>Cần thanh toán:</strong></td>
                            <td class="text-end text-danger fs-4 fw-bold">@String.Format("{0:N0} đ", canThanhToan)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>