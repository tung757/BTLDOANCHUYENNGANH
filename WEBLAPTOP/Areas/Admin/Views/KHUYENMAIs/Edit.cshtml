@model WEBLAPTOP.Models.KHUYENMAI

@{
    ViewBag.Title = "Chỉnh sửa khuyến mãi";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active">
                <a href="#"><b>Chỉnh sửa khuyến mãi</b></a>
            </li>
        </ul>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID_KM) <div class="form-horizontal">
            <h4>Thông tin khuyến mãi</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-inline-custom">
                @Html.LabelFor(model => model.GiamGia, "Giảm giá", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mức giảm giá..." } })
                @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
            </div>

            <div class="form-inline-custom">
                @Html.LabelFor(model => model.Mota, "Mô tả", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mô tả khuyến mãi..." } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>

            <div class="btn-actions">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    }
</main>

<style>
    .form-inline-custom {
        display: flex;
        align-items: center;
        gap: 10px;
        max-width: 500px;
        margin-bottom: 15px; /* Thêm khoảng cách giữa các trường */
    }

        .form-inline-custom label {
            font-weight: 600;
            width: 120px;
            margin-bottom: 0;
        }

        .form-inline-custom input.form-control {
            flex: 1;
            max-width: 300px;
        }

    .btn-actions {
        margin-left: 130px; /* Căn chỉnh với label (120px) + gap (10px) */
        margin-top: 20px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}