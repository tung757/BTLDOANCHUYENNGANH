@model IEnumerable<WEBLAPTOP.Models.KHUYENMAI>

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Danh sách khuyến mãi</b></a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="row element-button">
                        <div class="col-sm-2">
                            <a class="btn btn-add btn-sm" href="@Url.Action("Create", "KHUYENMAIs")" title="Thêm">
                                <i class="fa fa-plus"></i> Tạo mới khuyến mãi
                            </a>
                        </div>
                    </div>
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th width="10"><input type="checkbox" id="all"></th>
                                <th>Giảm Giá</th>
                                <th>Mô tả</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="10">
                                        <input type="checkbox" name="check1" value="@item.ID_KM">
                                    </td>

                                    <td>
                                        @item.GiamGia
                                    </td>
                                    <td>@item.Mota</td>
                                    <td>
                                        <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                onclick="confirmDelete(@item.ID_KM)">
                                            <i class="fa fa-trash"></i>
                                        </button>

                                        <a class="btn btn-primary btn-sm edit" title="Sửa"
                                           href="@Url.Action("Edit", "KHUYENMAIs", new { id = item.ID_KM })">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: "Xác nhận xóa?",
            text: "Bạn có chắc muốn xóa Mã khuyến mãi này không?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "KHUYENMAIs", new { area = "Admin" })',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            // THÀNH CÔNG: Xóa được
                            Swal.fire({
                                title: "Đã xóa!",
                                text: "Khuyến mãi đã được xóa thành công.",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            });
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            Swal.fire({
                                title: "Lỗi logic!",
                                text: res.message,
                                icon: "error",
                                showConfirmButton: true
                            });
                        }
                    },
                    error: function () {
                        // LỖI KẾT NỐI (Lỗi 404, 500...)
                        Swal.fire({
                            title: "Lỗi kết nối!",
                            text: "Không thể gửi yêu cầu. (Kiểm tra [HttpPost] trong Controller).",
                            icon: "error",
                            showConfirmButton: true
                        });
                    }
                    // --- HẾT KHỐI BỊ THIẾU ---
                });
            }
        });
    }
</script>

<style>
    #sampleTable {
        width: 60%;
        margin-left: 0;
    }

        #sampleTable th:last-child,
        #sampleTable td:last-child {
            width: 180px;
            text-align: center;
        }

    .btn.btn-primary.btn-sm {
        padding: 4px 6px;
        font-size: 13px;
    }
</style>

