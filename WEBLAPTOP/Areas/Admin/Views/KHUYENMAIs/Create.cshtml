@model WEBLAPTOP.Models.KHUYENMAI

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Thêm mới khuyến mãi</b></a></li>
        </ul>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <div class="form-horizontal">
            <h4>Thông tin khuyến mãi</h4>
            <hr />

            <div class="form-inline-custom mb-3"> @Html.LabelFor(model => model.GiamGia, "Mức giảm giá", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số tiền giảm...", type = "number" } })
                @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
            </div>

            <div class="form-inline-custom mb-3">
                @Html.LabelFor(model => model.Mota, "Mô tả", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Giảm 10%, Miễn phí ship..." } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tạo mới" class="btn btn-success btn-create" />
            </div>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="text-decoration-none">
            <i class="fa fa-arrow-left"></i> Quay lại Danh Sách Khuyến Mãi
        </a>
    </div>

    </main>
<style>
    .form-inline-custom {
        display: flex;
        align-items: center;
        gap: 10px;
        max-width: 500px;
    }

        .form-inline-custom label {
            font-weight: 600;
            width: 120px;
            margin-bottom: 0;
        }

        .form-inline-custom input.form-control {
            flex: 1;
            max-width: 300px;
            display: inline-block;
        }

    .list-dm {
        max-width: 400px;
    }

    .dm-container {
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 10px 15px;
        background: #f8f9fa;
        max-height: 250px;
        overflow-y: auto;
    }

    .dm-item {
        display: flex;
        align-items: center;
        padding: 6px 0;
        font-size: 15px;
        color: #333;
    }

        .dm-item i {
            color: #ffc107;
        }

        .dm-item:hover {
            background-color: #f1f1f1;
            border-radius: 4px;
            padding-left: 6px;
            transition: 0.2s;
        }

    .btn-create {
        margin-left: 130px;
    }
</style>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
