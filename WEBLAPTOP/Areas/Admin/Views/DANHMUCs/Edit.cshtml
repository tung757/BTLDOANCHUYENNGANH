@model WEBLAPTOP.Models.DANHMUC

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active">
                <a href="#"><b>Chỉnh sửa danh mục</b></a>
            </li>
        </ul>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID_DM)

        <div class="form-horizontal">
            <h4>Danh mục</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-inline-custom">
                @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên danh mục..." } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>

            <div class="btn-actions">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    }
</main>

<style>
    .form-inline-custom {
        display: flex;
        align-items: center;
        gap: 10px;
        max-width: 500px;
    }

        .form-inline-custom label {
            font-weight: 600;
            width: 120px;
            margin-bottom: 0;
        }

        .form-inline-custom input.form-control {
            flex: 1;
            max-width: 300px;
        }

    .btn-actions {
        margin-left: 130px;
        margin-top: 15px;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
