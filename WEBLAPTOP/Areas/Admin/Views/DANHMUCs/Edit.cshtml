@model WEBLAPTOP.Models.DANHMUC

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Chỉnh sửa danh mục</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/Scripts/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/fontawesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/jquery-confirm.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/css/main.css" />

    <style>
        .form-inline-custom {
            display: flex;
            align-items: center;
            gap: 10px;
            max-width: 500px;
        }

            .form-inline-custom label {
                font-weight: 600;
                width: 120px;
                margin-bottom: 0;
            }

            .form-inline-custom input.form-control {
                flex: 1;
                max-width: 300px;
            }

        .btn-actions {
            margin-left: 130px;
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <main class="app-content">
        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb side">
                <li class="breadcrumb-item active">
                    <a href="#"><b>Chỉnh sửa danh mục</b></a>
                </li>
            </ul>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID_DM)

            <div class="form-horizontal">
                <h4>Danh mục</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-inline-custom">
                    @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên danh mục..." } })
                    @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                </div>

                <div class="btn-actions">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        }
    </main>

    <!-- JS -->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery-confirm.min.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
