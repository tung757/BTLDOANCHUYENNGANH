@model IEnumerable<WEBLAPTOP.Models.DANHMUC>
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Main CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/fontawesome.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/all.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/jquery-confirm.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/css/main.css")" />

</head>

<body>
    <main class="app-content">
        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb side">
                <li class="breadcrumb-item active"><a href="#"><b>Danh sách danh mục</b></a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <div class="row element-button">
                            <div class="col-sm-2">
                                <a class="btn btn-add btn-sm" href="@Url.Action("Create", "DANHMUCs")" title="Thêm">
                                    <i class="fas fa-plus"></i> Tạo mới danh mục
                                </a>
                            </div>
                        </div>
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th width="10"><input type="checkbox" id="all"></th>
                                    <th>Tên danh mục</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="10"><input type="checkbox" name="check1" value="@item.ID_DM"></td>
                                        <td>@item.TenDM</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                    onclick="confirmDelete(@item.ID_DM)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>

                                            <a class="btn btn-primary btn-sm edit" title="Sửa"
                                               href="@Url.Action("Edit", "DANHMUCs", new { id = item.ID_DM })">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    function confirmDelete(id) {
        // Dùng Swal.fire (cú pháp của SweetAlert 2)
        Swal.fire({
            title: "Xác nhận xóa?",
            text: "Bạn có chắc muốn xóa danh mục này không?",
            icon: "warning",
            showCancelButton: true, // Hiển thị nút Hủy
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa', // Đổi chữ nút
            cancelButtonText: 'Hủy'  // Đổi chữ nút
        }).then((result) => { // SweetAlert 2 trả về 'result'
            // Kiểm tra xem người dùng có bấm nút "Xóa" không
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "DANHMUCs", new { area = "Admin" })',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            // Dùng Swal.fire cho thông báo thành công
                            Swal.fire({
                                title: "Đã xóa!",
                                text: "Danh mục đã được xóa thành công.",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false // Ẩn nút OK
                            });
                            setTimeout(() => location.reload(), 1000);
                        }
                    },
                    error: function () {
                        // Dùng Swal.fire cho thông báo lỗi
                        Swal.fire({
                            title: "Lỗi!",
                            text: "Không thể xóa danh mục. Vui lòng thử lại.",
                            icon: "error",
                            timer: 2000,
                            showConfirmButton: false // Ẩn nút OK
                        });
                    }
                });
            }
        });
    }
    </script>

    <style>
        #sampleTable {
            width: 60%;
            margin-left: 0;
        }

            #sampleTable th:last-child,
            #sampleTable td:last-child {
                width: 180px;
                text-align: center;
            }

        .btn.btn-primary.btn-sm {
            padding: 4px 6px;
            font-size: 13px;
        }
    </style>
</body>
</html>
