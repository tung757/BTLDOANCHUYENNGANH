@model IEnumerable<WEBLAPTOP.Models.KHACHHANG>

@{
    ViewBag.Title = "Danh sách khách hàng";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Danh sách khách hàng</b></a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">

                    <div class="row element-button">
                        <div class="col-sm-2">
                            <a class="btn btn-delete btn-sm print-file" title="In" onclick="window.print()">
                                <i class="fa fa-print"></i> In dữ liệu
                            </a>
                        </div>
                        <div class="col-sm-2">
                            <a class="btn btn-excel btn-sm" href="@Url.Action("ExportToExcel", "KHACHHANGs")">
                                <i class="fa fa-file-excel-o"></i> Xuất Excel
                            </a>
                        </div>
                        <div class="col-sm-2">
                            <a class="btn btn-delete btn-sm pdf-file" href="@Url.Action("ExportToPDF", "KHACHHANGs")">
                                <i class="fa fa-file-pdf-o"></i> Xuất PDF
                            </a>
                        </div>
                        <!-- Thanh tìm kiếm bên phải -->
                        <div class="col-sm-6" style="float: right; text-align: right; margin-left: auto;">
                            <form method="get" action="@Url.Action("Index", "SANPHAMs")" style="display: inline-block;">
                                <div class="input-group">
                                    <input type="text" name="search"
                                           value="@ViewBag.Search"
                                           class="form-control"
                                           placeholder="Tìm kiếm sản phẩm..."
                                           style="width: 250px; border-radius: 4px;">
                                </div>
                            </form>
                        </div>
                    </div>

                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead class="table-light">
                            <tr>
                                <th width="10"><input type="checkbox" id="all"></th>
                                <th>Tên khách hàng</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                                <th>Email</th>
                                <th>Tài khoản</th>
                                <th>Phân quyền</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><input type="checkbox" name="check1" value="@item.ID_KH"></td>
                                    <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GioTinh)</td>
                                    <td>@(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TK)</td>
                                    <td>
                                        @if (item.PhanQuyen == 1)
                                        {<span class="badge bg-danger">Admin</span> }
                                        else
                                        { <span class="badge bg-info">Khách hàng</span>}
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-info btn-sm" title="Chi tiết"
                                           href="@Url.Action("Details", "KHACHHANGs", new { id = item.ID_KH })">
                                            <i class="fa fa-eye"></i>
                                        </a>

                                        <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                onclick="confirmDelete(@item.ID_KH)">
                                            <i class="fa fa-trash"></i>
                                        </button>

                                        <a class="btn btn-warning btn-sm edit" title="Sửa"
                                           href="@Url.Action("Edit", "KHACHHANGs", new { id = item.ID_KH })">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <nav>
                <ul class="pagination justify-content-center">

                    @* Nút Previous *@
                    <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", "KHACHHANGs", new { page = ViewBag.Page - 1 })">«</a>
                    </li>

                    @{
                        int current = ViewBag.Page;
                        int total = ViewBag.TotalPages;

                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(total, current + 2);

                        // Nếu trang bắt đầu > 1 thì show trang 1
                        if (start > 1)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   href="@Url.Action("Index", "KHACHHANGs", new { page = 1 })">1</a>
                            </li>

                            if (start > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        // Vòng lặp trang
                        for (int i = start; i <= end; i++)
                        {
                            <li class="page-item @(i == current ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", "KHACHHANGs", new { page = i })">@i</a>
                            </li>
                        }

                        // Nếu trang cuối < total
                        if (end < total)
                        {
                            if (end < total - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }

                            <li class="page-item">
                                <a class="page-link"
                                   href="@Url.Action("Index", "KHACHHANGs", new { page = total })">@total</a>
                            </li>
                        }
                    }

                    @* Nút Next *@
                    <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", "KHACHHANGs", new { page = ViewBag.Page + 1 })">»</a>
                    </li>

                </ul>
            </nav>
        </div>
    </div>


</main>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: "Xác nhận xóa?",
            text: "Bạn có chắc muốn xóa Khách hàng này không?", // Sửa text
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "KHACHHANGs", new { area = "Admin" })', // Sửa URL
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            Swal.fire({
                                title: "Đã xóa!",
                                text: "Khách hàng đã được xóa thành công.", // Sửa text
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            });
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            // Thêm khối else để xử lý lỗi (vd: khóa ngoại)
                            Swal.fire({
                                title: "Lỗi!",
                                text: res.message, // Hiển thị lỗi từ Controller
                                icon: "error",
                                showConfirmButton: true
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: "Lỗi!",
                            text: "Không thể xóa khách hàng. Vui lòng thử lại.", // Sửa text
                            icon: "error",
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }
                });
            }
        });
    }
    var myApp = new function () {
        this.printTable = function () {
            var tab = document.getElementById('sampleTable');
            var win = window.open('', '', 'height=700,width=700');
            win.document.write(tab.outerHTML);
            win.document.close();
            win.print();
        }
    }
</script>

<style>
    #sampleTable {
        width: 100%;
        margin-left: 0;
    }

        #sampleTable th:last-child,
        #sampleTable td:last-child {
            width: 150px;
            text-align: center;
        }

    .btn-primary.btn-sm,
    .btn-warning.btn-sm,
    .btn-info.btn-sm { /* Thêm info button */
        min-width: 35px;
        height: 32px;
        line-height: 1.5; /* Căn icon cho đều */
    }
    @@media print {
        /* Ẩn các thành phần không cần thiết khi in */
        .app-header, .app-sidebar, .app-title, .element-button, .tile-footer, .btn {
            display: none !important;
        }
        /* Căn chỉnh bảng để in đẹp hơn */
        .tile {
            box-shadow: none;
            border: none;
        }

        body {
            background-color: white;
        }
    }
</style>