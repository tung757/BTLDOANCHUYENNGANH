@{
    // Lấy danh sách banner từ Controller
    var listBanners = ViewBag.Banners as List<WEBLAPTOP.Models.QUANGCAO>;
}
<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item active"><a href="#"><b>Cài đặt hệ thống</b></a></li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="tile">
                <h3 class="tile-title">Giao diện & Hiển thị</h3>
                <div class="tile-body">
                    <form>
                        <div class="form-group d-flex align-items-center justify-content-between">
                            <div>
                                <label class="fw-bold" style="font-size: 16px;">Chế độ Tối (Dark Mode)</label>
                                <p class="text-muted mb-0">Chuyển đổi giao diện sang nền tối để bảo vệ mắt.</p>
                            </div>

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="darkModeSwitch" style="width: 50px; height: 25px; cursor: pointer;">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="tile">
            <h3 class="tile-title">Quản lý Banner Quảng Cáo</h3>
            <div class="tile-body">

                @using (Html.BeginForm("UploadBanner", "SystemSettings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mb-4" }))
                {
                    <div class="form-group">
                        <label class="control-label fw-bold">Chọn ảnh banner (Có thể chọn nhiều):</label>
                        <div class="input-group mt-2">
                            <input type="file" name="bannerFiles" class="form-control" accept="image/*" multiple required>
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-upload"></i> Tải lên tất cả
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="bx bx-info-circle"></i> Giữ phím <strong>Ctrl</strong> để chọn nhiều ảnh cùng lúc.
                        </small>
                    </div>
                }

                <hr />

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            const switchBtn = $('#darkModeSwitch');
            const body = $('body');

            // 1. Khi vào trang này: Kiểm tra xem đang là chế độ gì để BẬT/TẮT cái nút gạt
            if (localStorage.getItem('theme') === 'dark') {
                switchBtn.prop('checked', true); // Gạt nút sang phải
            } else {
                switchBtn.prop('checked', false);
            }

            // 2. Bắt sự kiện khi người dùng gạt nút
            switchBtn.change(function () {
                if ($(this).is(':checked')) {
                    // BẬT CHẾ ĐỘ TỐI
                    body.addClass('dark-mode');
                    localStorage.setItem('theme', 'dark');

                    // Thông báo nhỏ (Tùy chọn)
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã bật chế độ tối',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    // TẮT CHẾ ĐỘ TỐI
                    body.removeClass('dark-mode');
                    localStorage.setItem('theme', 'light');
                }
            });
        });
         function deleteBanner(id) {
            if(confirm("Bạn có chắc muốn xóa banner này?")) {
                $.ajax({
                    url: '@Url.Action("DeleteBanner", "SystemSettings")',
                    type: 'POST',
                    data: { id: id },
                    success: function(res) {
                        if(res.success) {
                            location.reload(); // Tải lại trang để cập nhật danh sách
                        } else {
                            alert("Lỗi khi xóa!");
                        }
                    }
                });
            }
        }
    </script>
}