@model WEBLAPTOP.Models.SANPHAM

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Thêm mới sản phẩm</b></a></li>
        </ul>
    </div>


    @using (Html.BeginForm("Create", "SANPHAMs", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row tile-body" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h4 class="col-md-12 mb-3">Thêm mới sản phẩm</h4>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.MaSP, "Mã sản phẩm", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.MaSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã sản phẩm" } })
            @Html.ValidationMessageFor(m => m.MaSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.TenSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm" } })
            @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.SoLuong, "Số lượng", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.SoLuong, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Nhập số lượng" } })
            @Html.ValidationMessageFor(m => m.SoLuong, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.ID_DM, "Danh mục", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ID_DM", null, "-- Chọn danh mục --", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ID_DM, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.Gia, "Giá", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.Gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá vốn" } })
            @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.GiaBan, "Giá bán", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.GiaBan, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá bán" } })
            @Html.ValidationMessageFor(m => m.GiaBan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Ảnh sản phẩm</label>

            <div id="boxchoice" class="mb-3">
                <a href="javascript:" class="Choicefile btn btn-dark">
                    <i class="fas fa-cloud-upload-alt"></i> Chọn ảnh
                </a>
                <input type="file" id="uploadfile" name="ImagesFile" multiple="multiple" style="display:none;" accept="image/*" onchange="readURL(this);" />
            </div>

            <div id="thumbbox" class="mt-2">
                @if (Model != null && !string.IsNullOrEmpty(Model.Images_url))
                {
                    <img src="~/Images/Product_images/@Model.Images_url" alt="Thumb image" id="thumbimage" class="img-thumbnail" style="max-width:200px;" />
                    <a class="removeimg btn btn-danger btn-sm mt-2" href="javascript:">Xóa ảnh</a>
                }
                else
                {
                    <img src="#" alt="Thumb image" id="thumbimage" class="img-thumbnail" style="display:none; max-width:200px;" />
                    <a class="removeimg btn btn-danger btn-sm mt-2" href="javascript:" style="display:none;">Xóa ảnh</a>
                }
            </div>
        </div>


        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.NgayTao, "Ngày tạo", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.NgayTao, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(m => m.NgayTao, "", new { @class = "text-danger" })
        </div>

        <!-- MÔ TẢ SẢN PHẨM -->
        <div class="mb-3 col-md-12">
            @Html.LabelFor(model => model.Mota, "Mô tả sản phẩm", htmlAttributes: new { @class = "form-label fw-bold fs-5" })

            @Html.TextAreaFor(m => m.Mota, new { @class = "form-control", @id = "mota_summernote" })
            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
        </div>


        <div class="col-md-12 mt-4">
            <button type="submit" class="btn btn-primary btn-save">
                <i class="fa fa-save"></i> Tạo mới
            </button>

            <a href="@Url.Action("Index", "SANPHAMs")" class="btn btn-secondary btn-cancel">
                <i class="fa fa-times"></i> Hủy bỏ
            </a>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="text-decoration-none">
            <i class="fa fa-arrow-left"></i> Quay lại Danh Sách Sản Phẩm
        </a>
    </div>
</main>

<style>
    .tile-body {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
    }

    .Choicefile {
        background: #212529;
        color: #fff;
        padding: 8px 18px;
        border-radius: 5px;
        text-decoration: none;
    }

        .Choicefile:hover {
            background: #343a40;
            text-decoration: none;
            color: #fff;
        }

    .btn-save {
        background-color: #28a745;
        color: white;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }
    /* Chỉnh tiêu đề Label */
    .form-label.fw-bold {
        font-size: 18px; /* Cỡ chữ tùy chỉnh */
        color: #333;
        margin-bottom: 10px;
        display: block;
    }

    /* Chỉnh khung Summernote nhỏ gọn lại */
    .note-editor.note-frame {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ced4da;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            // --- A. CẤU HÌNH SUMMERNOTE ---
            $('#mota_summernote').summernote({
                placeholder: 'Nhập mô tả chi tiết sản phẩm...',
                tabsize: 2,

                // --- SỬA Ở ĐÂY ---
                height: 150, // Giảm từ 200 xuống 150 (hoặc số bạn thích)

                // Tinh gọn toolbar lại cho đỡ to
                toolbar: [
                    ['style', ['bold', 'italic', 'underline']], // Gom nhóm font
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture']], // Bỏ video nếu không cần
                    ['view', ['codeview']] // Bỏ fullscreen, help
                ]
            });

            // --- B. XỬ LÝ NÚT CHỌN ẢNH ---
            $('.Choicefile').click(function () {
                $('#uploadfile').click();
            });
        });

        // --- C. CÁC HÀM XỬ LÝ ẢNH (Để ngoài document.ready) ---

        function readURL(input) {
            $('#thumbbox').empty();
            if (input.files && input.files.length > 0) {
                $('.removeimg').show();
                for (var i = 0; i < input.files.length; i++) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        var img = $('<img>', {
                            class: 'img-thumbnail m-2',
                            src: e.target.result,
                            style: 'width: 150px; height: 150px; object-fit: cover;'
                        });
                        $('#thumbbox').append(img);
                    }
                    reader.readAsDataURL(input.files[i]);
                }
            }
        }

        function clearImages() {
            $('#uploadfile').val('');
            $('#thumbbox').empty();
            $('.removeimg').hide();
        }

        // Hàm xóa ảnh cũ (Dành cho trang Edit)
        function markForDeletion(btn, imgName) {
            $(btn).parent().remove();
            var currentVal = $('#ImagesToDelete').val();
            if (currentVal === "") $('#ImagesToDelete').val(imgName);
            else $('#ImagesToDelete').val(currentVal + "," + imgName);
        }
    </script>
}