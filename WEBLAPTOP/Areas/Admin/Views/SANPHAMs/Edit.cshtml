@model WEBLAPTOP.Models.SANPHAM

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SANPHAMs")"><b>Danh sách sản phẩm</b></a></li>
            <li class="breadcrumb-item active"><a href="#">Chỉnh sửa sản phẩm</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Chỉnh sửa thông tin sản phẩm</h3>

                @using (Html.BeginForm("Edit", "SANPHAMs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID_SP)
                    @Html.HiddenFor(model => model.NgayTao) // Giữ lại ngày tạo cũ
                    @Html.HiddenFor(model => model.SoLuongBan) // Giữ lại số lượng bán cũ (nếu cần)

                    <div class="tile-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.MaSP, "Mã sản phẩm", htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.MaSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Gia, "Giá nhập", htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.GiaBan, "Giá bán", htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                    @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.SoLuong, "Số lượng tồn", htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ID_DM, "Danh mục", htmlAttributes: new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.ID_DM, (IEnumerable<SelectListItem>)ViewBag.ID_DM, "--- Chọn danh mục ---", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_DM, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Status_SP, "Trạng thái", htmlAttributes: new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.Status_SP, new SelectList(
                                        new[] {
                                            new { Value = "1", Text = "Hiện" },
                                            new { Value = "0", Text = "Ẩn" }
                                        }, "Value", "Text", Model.Status_SP), // Chọn giá trị hiện tại
                                        new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status_SP, "", new { @class = "text-danger" })
                                </div>

                                <input type="hidden" id="ImagesToDelete" name="ImagesToDelete" value="" />
                                <div class="form-group col-md-12">
                                    <label class="control-label">Ảnh sản phẩm</label>

                                    <div class="d-flex flex-wrap mb-3" id="currentImagesBox">
                                        @if (!string.IsNullOrEmpty(Model.Images_url) && Model.Images_url != "default.jpg")
                                        {
                                            var arrImages = Model.Images_url.Split(';');
                                            foreach (var img in arrImages)
                                            {
                                                <div class="position-relative m-2" style="width: 100px;">
                                                    <img src="~/Images/Product_images/@img" class="img-thumbnail" style="width:100px; height:100px; object-fit:cover;" />
                                                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 p-0"
                                                            style="width:20px; height:20px; line-height:1;"
                                                            onclick="markForDeletion(this, '@img')">
                                                        &times;
                                                    </button>
                                                </div>
                                            }
                                        }
                                    </div>

                                    <div id="boxchoice" class="mb-3">
                                        <a href="javascript:" class="Choicefile btn btn-dark btn-sm" style="min-width: 100px;">
                                            <i class="fa fa-cloud-upload-alt"></i> Thêm ảnh mới
                                        </a>

                                        <a href="javascript:" class="removeimg btn btn-danger btn-sm ms-2" onclick="clearImages()" style="display:none; min-width: 100px;">
                                            <i class="fa fa-trash"></i> Xóa chọn lại
                                        </a>

                                        <input type="file" id="uploadfile" name="ImagesFile" multiple style="display:none;" accept="image/*" onchange="readURL(this);" />
                                    </div>

                                    <div id="thumbbox" class="d-flex flex-wrap gap-2"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Mota, "Mô tả sản phẩm", htmlAttributes: new { @class = "form-label fw-bold fs-5" })
                                    @Html.TextAreaFor(m => m.Mota, new { @class = "form-control", @id = "mota_summernote" })
                                    @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="tile-footer">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-save"></i> Lưu lại
                        </button>
                        &nbsp;&nbsp;&nbsp;
                        <a class="btn btn-secondary" href="@Url.Action("Index")">
                            <i class="fa fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            // --- A. CẤU HÌNH SUMMERNOTE ---
            $('#mota_summernote').summernote({
                placeholder: 'Nhập mô tả chi tiết sản phẩm...',
                tabsize: 2,

                // --- SỬA Ở ĐÂY ---
                height: 150, // Giảm từ 200 xuống 150 (hoặc số bạn thích)

                // Tinh gọn toolbar lại cho đỡ to
                toolbar: [
                    ['style', ['bold', 'italic', 'underline']], // Gom nhóm font
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture']], // Bỏ video nếu không cần
                    ['view', ['codeview']] // Bỏ fullscreen, help
                ]
            });

            // --- B. XỬ LÝ NÚT CHỌN ẢNH ---
            $('.Choicefile').click(function () {
                $('#uploadfile').click();
            });
        });

        // --- C. CÁC HÀM XỬ LÝ ẢNH (Để ngoài document.ready) ---

        function readURL(input) {
            $('#thumbbox').empty();
            if (input.files && input.files.length > 0) {
                $('.removeimg').show();
                for (var i = 0; i < input.files.length; i++) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        var img = $('<img>', {
                            class: 'img-thumbnail m-2',
                            src: e.target.result,
                            style: 'width: 150px; height: 150px; object-fit: cover;'
                        });
                        $('#thumbbox').append(img);
                    }
                    reader.readAsDataURL(input.files[i]);
                }
            }
        }

        function clearImages() {
            $('#uploadfile').val('');
            $('#thumbbox').empty();
            $('.removeimg').hide();
        }

        // Hàm xóa ảnh cũ (Dành cho trang Edit)
        function markForDeletion(btn, imgName) {
            $(btn).parent().remove();
            var currentVal = $('#ImagesToDelete').val();
            if (currentVal === "") $('#ImagesToDelete').val(imgName);
            else $('#ImagesToDelete').val(currentVal + "," + imgName);
        }
    </script>
}
<style>
    /* Chỉnh tiêu đề Label */
    .form-label.fw-bold {
        font-size: 18px; /* Cỡ chữ tùy chỉnh */
        color: #333;
        margin-bottom: 10px;
        display: block;
    }

    /* Chỉnh khung Summernote nhỏ gọn lại */
    .note-editor.note-frame {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ced4da;
    }
</style>