@model WEBLAPTOP.Models.SANPHAM

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SANPHAMs")"><b>Danh sách sản phẩm</b></a></li>
            <li class="breadcrumb-item active"><a href="#">Chi tiết sản phẩm</a></li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Thông tin chi tiết sản phẩm</h3>
                <div class="tile-body">

                    <div class="row">
                        <div class="col-md-7">
                            <h4 class="mb-3">Thông tin chung</h4>
                            <hr />
                            <p>
                                <strong>Mã sản phẩm:</strong>
                                @Html.DisplayFor(model => model.MaSP)
                            </p>
                            <p>
                                <strong>Tên sản phẩm:</strong>
                                @Html.DisplayFor(model => model.TenSP)
                            </p>
                            <p>
                                <strong>Danh mục:</strong>
                                @Html.DisplayFor(model => model.DANHMUC.TenDM)
                            </p>
                            <p>
                                <strong>Giá nhập:</strong>
                                @(Model.Gia.HasValue ? Model.Gia.Value.ToString("N0") + " VNĐ" : "Chưa cập nhật")
                            </p>
                            <p>
                                <strong>Giá bán:</strong>
                                @(Model.GiaBan.HasValue ? Model.GiaBan.Value.ToString("N0") + " VNĐ" : "Chưa cập nhật")
                            </p>
                            <p>
                                <strong>Số lượng tồn:</strong>
                                @Html.DisplayFor(model => model.SoLuong)
                            </p>
                            <p>
                                <strong>Số lượng đã bán:</strong>
                                @Html.DisplayFor(model => model.SoLuongBan)
                            </p>
                            <p>
                                <strong>Trạng thái:</strong>
                                @if (Model.Status_SP == 1)
                                {
                                    <span class="badge bg-success">Hiện</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Ẩn</span>
                                }
                            </p>
                            <p>
                                <strong>Ngày tạo:</strong>
                                @(Model.NgayTao.HasValue ? Model.NgayTao.Value.ToString("dd/MM/yyyy HH:mm") : "Không rõ")
                            </p>
                        </div>

                        <div class="col-md-5">
                            <h4 class="mb-3">Hình ảnh</h4>
                            <hr />
                            @if (!string.IsNullOrEmpty(Model.Images_url))
                            {
                                <img src="@Url.Content(Model.Images_url)" alt="Ảnh sản phẩm: @Model.TenSP" class="img-fluid img-thumbnail" style="max-width: 350px; height: auto;" />
                            }
                            else
                            {
                                <p>Không có ảnh.</p>
                            }

                            <h4 class="mt-4 mb-3">Mô tả</h4>
                            <hr />
                            <div style="white-space: pre-wrap; word-break: break-word; line-height: 1.6;">
                                @(string.IsNullOrEmpty(Model.Mota) ? "Không có mô tả." : Model.Mota)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tile-footer">
                    <a class="btn btn-warning" href="@Url.Action("Edit", "SANPHAMs", new { id = Model.ID_SP })">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-secondary" href="@Url.Action("Index")">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>